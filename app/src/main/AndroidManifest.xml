<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".OLPGASApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Base.Theme.OLPGB"
        tools:targetApi="31">
        <activity
            android:name=".main_activity.presentation.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.App.Starting">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".manage_room.ui.BookedRoom"
            android:exported="false"
            android:theme="@style/NoStatusBarTheme" />
        <activity
            android:name=".manage_room.ui.UpdateRoom"
            android:exported="false"
            android:theme="@style/NoStatusBarTheme" />
        <activity
            android:name=".manage_room.ui.AddRoomActivity"
            android:exported="false"
            android:theme="@style/NoStatusBarTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".manage_room.ui.MyRoomActivity"
            android:exported="false"
            android:theme="@style/NoStatusBarTheme"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".roomdetails.ui.RoomDetails"
            android:exported="false"
            android:theme="@style/NoStatusBarTheme" />
        <activity
            android:name=".user_profile.presentation.UserProfileActivity"
            android:exported="false"
            android:theme="@style/NoStatusBarTheme" />
        <activity
            android:name=".roomdetails.ui.ViewRoomActivity"
            android:exported="false"
            android:theme="@style/statusBarTheme" />
        <activity
            android:name=".auth.presentation.login_activity.LoginActivity"
            android:exported="true"
            android:theme="@style/NoStatusBarTheme" />
        <activity
            android:name=".auth.presentation.signup_activity.SignUpActivity"
            android:exported="false"
            android:theme="@style/NoStatusBarTheme" />
    </application>

</manifest>