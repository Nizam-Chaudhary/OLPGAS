<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:paddingBottom="40dp">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/display_image_viewpager"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:src="@drawable/room1"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <TextView
            android:id="@+id/room_details_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingStart="5dp"
            android:text="ABC banglo"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@id/room_details_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/display_image_viewpager" />

        <TextView
            android:id="@+id/room_details_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_location"
            android:paddingVertical="5dp"
            android:drawablePadding="5dp"
            android:paddingStart="5dp"
            android:textStyle="bold"
            android:text="Bypass Road, Vadodara, Gujarat"
            android:textColor="@color/secondaryTextColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/room_details_name" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/room_details_location" />


        <TextView
            android:id="@+id/roomTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Room Details"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialDivider" />

        <GridLayout
            android:id="@+id/gl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="20dp"
            android:columnCount="2"
            app:flow_horizontalGap="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomTextView">

            <TextView
                android:layout_row="0"
                android:layout_column="0"
                android:paddingHorizontal="20dp"
                android:paddingVertical="7dp"
                android:text="Room Type" />

            <TextView
                android:id="@+id/room_type_tv"
                android:layout_row="0"
                android:layout_column="1"
                android:paddingHorizontal="10dp"
                android:text="Private Banglo"
                android:textColor="@color/Orange" />

            <TextView
                android:layout_row="1"
                android:layout_column="0"
                android:paddingHorizontal="20dp"
                android:paddingVertical="7dp"
                android:text="Sharable" />

            <TextView
                android:id="@+id/shareable_tv"
                android:layout_row="1"
                android:layout_column="1"
                android:paddingHorizontal="10dp"
                android:text="3 People"
                android:textColor="@color/Orange" />

            <TextView
                android:layout_row="2"
                android:layout_column="0"
                android:paddingHorizontal="20dp"
                android:paddingVertical="7dp"
                android:text="Suitable for" />

            <TextView
                android:id="@+id/sutable_for_tv"
                android:layout_row="2"
                android:layout_column="1"
                android:paddingHorizontal="10dp"
                android:text="Students, Working Professionals"
                android:textColor="@color/Orange"
                android:textStyle="bold" />

            <TextView
                android:layout_row="3"
                android:layout_column="0"
                android:paddingHorizontal="20dp"
                android:paddingVertical="7dp"
                android:text="Area" />

            <TextView
                android:id="@+id/room_area_tv"
                android:layout_row="3"
                android:layout_column="1"
                android:paddingHorizontal="10dp"
                android:text="4500 sq.ft."
                android:textColor="@color/Orange"
                android:textStyle="bold" />

            <TextView
                android:layout_width="150dp"
                android:layout_row="4"
                android:layout_column="0"
                android:inputType="textMultiLine"
                android:paddingHorizontal="20dp"
                android:paddingVertical="7dp"
                android:text="Minimum Contact Duration" />

            <TextView
                android:id="@+id/min_contract_duration"
                android:layout_row="4"
                android:layout_column="1"
                android:paddingHorizontal="10dp"
                android:textColor="@color/Orange"
                android:text="1 Month"
                android:textStyle="bold" />

        </GridLayout>

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gl" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip1"
            android:layout_width="0dp"
            android:textColor="#4CAF50"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="AC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/materialDivider2" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Wi-Fi"
            android:textColor="#4CAF50"
            app:layout_constraintStart_toEndOf="@id/chip1"
            app:layout_constraintTop_toBottomOf="@id/materialDivider2" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:text="Fridge"
            android:textColor="#4CAF50"
            app:layout_constraintStart_toEndOf="@id/chip2"
            app:layout_constraintTop_toBottomOf="@id/materialDivider2" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:textColor="#4CAF50"
            android:text="Geyser"
            app:layout_constraintStart_toEndOf="@id/chip3"
            app:layout_constraintTop_toBottomOf="@id/materialDivider2" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:layout_marginHorizontal="5dp"
            android:text="2 Fan"
            app:layout_constraintStart_toEndOf="@id/chip4"
            app:layout_constraintTop_toBottomOf="@id/materialDivider2" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Furnished"
                android:textColor="#4CAF50"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chip1" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Washing Machine"
                android:textColor="#4CAF50"
                app:layout_constraintStart_toEndOf="@id/chip6"
                app:layout_constraintTop_toBottomOf="@id/chip2" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:text="Parking(Covered)"
                android:textColor="#4CAF50"
                app:layout_constraintStart_toEndOf="@id/chip7"
                app:layout_constraintTop_toBottomOf="@id/chip4" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chip6" />


            <TextView
                android:id="@+id/room_details_aboutTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/materialDivider3"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="About Room"
              />

            <TextView
                android:id="@+id/room_details_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/room_details_aboutTV"
                android:textSize="14sp"
                android:textColor="@color/secondaryTextColor"
                android:paddingStart="12dp"
                android:paddingBottom="40dp"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Price"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/roomPrice"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:text="20000/-"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toEndOf="@id/tv1"
                    android:text="Deposit"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/room_deposit_tv"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/rent_amount_tv"
                    android:text="30000/-"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/room_contact_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="#4CAF50"
                    android:text="Contact" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>