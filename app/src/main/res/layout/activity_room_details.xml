<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/display_image_viewpager"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/room1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/room_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="12dp"
                android:text="ABC banglo"
                android:textColor="@color/textColor"
                android:textSize="25sp"
                app:layout_constraintBottom_toTopOf="@id/room_details_location"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/display_image_viewpager" />

            <TextView
                android:id="@+id/room_details_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="5dp"
                android:paddingVertical="5dp"
                android:paddingStart="10dp"
                android:text="Bypass Road, Vadodara, Gujarat"
                android:textColor="@color/secondaryTextColor"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/materialDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_details_name" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/room_details_location" />

            <TextView
                android:id="@+id/detailed_roomType_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Type"
                style="@style/detailed_room_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/materialDivider" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/detailed_roomType_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailed_roomType_TV">

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomType_singleRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Single"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomType_DoubleRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Double"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomType_DormRoom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dorm"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomType_Apartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apartment"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomType_StudioApartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Studio Apartment"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomType_independentHouse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Independent House"
                    style="@style/chip_Style" />
            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/detailed_roomSuitableFor_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/detailed_room_textView"
                android:text="Suitable For"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailed_roomType_group" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/details_roomSuitableFor_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/detailed_roomSuitableFor_TV">

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomSuitable_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomSuitable_professionals"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professionals"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomSuitable_Couples"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Couples"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomSuitable_ShortTermStay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short-term Stay"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/details_roomSuitable_Solo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Solo"
                    style="@style/chip_Style" />
            </com.google.android.material.chip.ChipGroup>


            <TextView
                android:id="@+id/amenities_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/detailed_room_textView"
                android:text="Amenities"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/details_roomSuitableFor_group" />


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/amenities_chipgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingStart="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amenities_tv">


                <com.google.android.material.chip.Chip
                    android:id="@+id/chip1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AC"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wi-Fi"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fridge"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Geyser"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 Fan"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Furnished"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Washing Machine"
                    style="@style/chip_Style" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parking(Covered)"
                    style="@style/chip_Style" />
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/amenities_chipgroup" />


            <TextView
                android:id="@+id/roomTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details"
                style="@style/detailed_room_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/materialDivider4" />

            <GridLayout
                android:id="@+id/gl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginTop="20dp"
                android:columnCount="2"
                app:flow_horizontalGap="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/roomTextView">

                <TextView
                    android:layout_row="1"
                    android:layout_column="0"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="7dp"
                    android:text="Sharable" />

                <TextView
                    android:id="@+id/shareable_tv"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:paddingHorizontal="10dp"
                    android:text="3 People"
                    android:textColor="@color/Orange" />

                <TextView
                    android:layout_row="3"
                    android:layout_column="0"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="7dp"
                    android:text="Area" />

                <TextView
                    android:id="@+id/room_area_tv"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:paddingHorizontal="10dp"
                    android:text="4500 sq.ft."
                    android:textColor="@color/Orange"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="150dp"
                    android:layout_row="4"
                    android:layout_column="0"
                    android:inputType="textMultiLine"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="7dp"
                    android:text="Minimum Contact Duration" />

                <TextView
                    android:id="@+id/min_contract_duration"
                    android:layout_row="4"
                    android:layout_column="1"
                    android:paddingHorizontal="10dp"
                    android:text="1 Month"
                    android:textColor="@color/Orange"
                    android:textStyle="bold" />

            </GridLayout>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/materialDivider2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gl" />

            <TextView
                android:id="@+id/room_details_aboutTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Room"
                style="@style/detailed_room_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/materialDivider2" />

            <TextView
                android:id="@+id/room_details_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:paddingStart="12dp"
                android:paddingBottom="50dp"
                android:textColor="@color/secondaryTextColor"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/room_details_aboutTV" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="Price"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/roomPrice"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:text="20000/-"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toEndOf="@id/tv1"
                    android:text="Deposit"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/room_deposit_tv"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv1"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@id/roomPrice"
                    android:text="30000/-"
                    android:textColor="#2196F3"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/room_contact_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:backgroundTint="#4CAF50"
                    android:text="Contact" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>