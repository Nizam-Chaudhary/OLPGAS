<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="30dp"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".profile.ui.UserAccount">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="100dp"
                android:layout_height="92dp"
                android:scaleType="centerCrop"
                android:src="@drawable/temp_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView1">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:paddingTop="50dp">

                <TextView
                    android:id="@+id/uEmailTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="10dp"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="15dp"
                    android:text="vp@gmail.com"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!--                <ImageButton-->
                <!--                    android:id="@+id/uEmail"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:background="@android:color/transparent"-->
                <!--                    android:src="@drawable/ic_right_arrow"-->
                <!--                    app:layout_constraintBottom_toBottomOf="@id/uEmailTV"-->
                <!--                    app:layout_constraintEnd_toEndOf="@id/uEmailTV"-->
                <!--                    app:layout_constraintTop_toTopOf="@+id/uEmailTV" />-->

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDividerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/uEmailTV"
                    tools:layout_editor_absoluteY="50dp" />


                <TextView
                    android:id="@+id/NameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingStart="4dp"
                    android:text="Name"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerEmail" />

                <TextView
                    android:id="@+id/uNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="10dp"
                    android:text="Vedika Patel"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/NameTV" />

                <ImageButton
                    android:id="@+id/uName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/uNameTV"
                    app:layout_constraintEnd_toEndOf="@id/uNameTV"
                    app:layout_constraintTop_toTopOf="@+id/uNameTV" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDividerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/uNameTV"
                    tools:layout_editor_absoluteY="50dp" />


                <TextView
                    android:id="@+id/GenderTV"
                    android:layout_width="50pt"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingStart="4dp"
                    android:text="Gender"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/AgeTv"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@id/materialDividerName"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerName" />

                <TextView
                    android:id="@+id/uGenderTV"
                    android:layout_width="50pt"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="10dp"
                    android:text="Female"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@id/GenderTV"
                    app:layout_constraintTop_toBottomOf="@id/GenderTV" />


                <ImageButton
                    android:id="@+id/uGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/uGenderTV"
                    app:layout_constraintEnd_toEndOf="@id/uGenderTV"
                    app:layout_constraintTop_toTopOf="@+id/uGenderTV" />


                <TextView
                    android:id="@+id/AgeTv"
                    android:layout_width="50pt"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingStart="4dp"
                    android:text="Age"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="@id/materialDividerName"
                    app:layout_constraintStart_toEndOf="@id/GenderTV"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerName" />

                <TextView
                    android:id="@+id/uAgeTV"
                    android:layout_width="50pt"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="10dp"
                    android:text="16"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="@id/AgeTv"
                    app:layout_constraintTop_toBottomOf="@id/AgeTv" />


                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/uAgeTV"
                    app:layout_constraintEnd_toEndOf="@id/uAgeTV"
                    app:layout_constraintTop_toTopOf="@+id/uAgeTV" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDividerAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toBottomOf="@id/uGenderTV" />

                <TextView
                    android:id="@+id/PhoneNumberTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:paddingStart="4dp"
                    android:text="Phone Number"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerAge" />

                <TextView
                    android:id="@+id/uPhoneNumberTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="10dp"
                    android:text="8469156804"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/PhoneNumberTV" />

                <ImageButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/uPhoneNumberTV"
                    app:layout_constraintEnd_toEndOf="@id/uPhoneNumberTV"
                    app:layout_constraintTop_toTopOf="@+id/uPhoneNumberTV" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDividerPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/uPhoneNumberTV"
                    tools:layout_editor_absoluteY="50dp" />


                <TextView
                    android:id="@+id/StreetTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:paddingStart="4dp"
                    android:text="Street Name/No"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerPhoneNumber" />

                <TextView
                    android:id="@+id/uAddressStreet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="10dp"
                    android:text="Kosamba Road"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/StreetTV" />

                <ImageButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/uAddressStreet"
                    app:layout_constraintEnd_toEndOf="@id/uAddressStreet"
                    app:layout_constraintTop_toTopOf="@+id/uAddressStreet" />


                <TextView
                    android:id="@+id/CityTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingStart="4dp"
                    android:text="City"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/uAddressStreet" />

                <TextView
                    android:id="@+id/uAddressCityTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="10dp"
                    android:text="Valsad"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/CityTV" />

                <ImageButton
                    android:id="@+id/uAddressCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/uAddressCityTV"
                    app:layout_constraintEnd_toEndOf="@id/uAddressCityTV"
                    app:layout_constraintTop_toTopOf="@+id/uAddressCityTV" />

                <TextView
                    android:id="@+id/StateTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingStart="4dp"
                    android:text="State"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/uAddressCityTV" />

                <TextView
                    android:id="@+id/uAddressStateTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="10dp"
                    android:text="Gujarat"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/StateTV" />

                <ImageButton
                    android:id="@+id/uAddressState"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/uAddressStateTV"
                    app:layout_constraintEnd_toEndOf="@id/uAddressStateTV"
                    app:layout_constraintTop_toTopOf="@+id/uAddressStateTV" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDividerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/uAddressStateTV"
                    tools:layout_editor_absoluteY="50dp" />

                <Button
                    android:id="@+id/uProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:paddingVertical="10dp"
                    android:text="Edit Profile"
                    android:textColor="@color/primary"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerAddress"
                    tools:layout_editor_absoluteY="50dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

