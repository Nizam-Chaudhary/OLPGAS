<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary"
    android:orientation="vertical"
    android:fillViewport="true"
    tools:context=".user_profile.presentation.UserProfileActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <ImageView
                android:id="@+id/iv_profile_pic"
                android:layout_width="100dp"
                android:layout_height="92dp"
                android:scaleType="centerCrop"
                android:src="@drawable/temp_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="30dp"
            app:cardCornerRadius="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView1">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:paddingTop="50dp">

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="24dp"
                    android:text="email@gmail.com"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDividerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_email"
                    tools:layout_editor_absoluteY="50dp" />


                <TextView
                    android:id="@+id/NameTV"
                    style="@style/userProfile_HeadingTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Name"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerEmail" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="VP Patel"
                    style="@style/userProfile_DataTV"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/NameTV" />

                <ImageButton
                    android:id="@+id/uName"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/tv_user_name"
                    app:layout_constraintEnd_toEndOf="@id/tv_user_name"
                    app:layout_constraintTop_toTopOf="@+id/tv_user_name" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDividerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                    tools:layout_editor_absoluteY="50dp" />


                <TextView
                    android:id="@+id/GenderTV"
                    style="@style/userProfile_HeadingTV"
                    android:layout_width="50pt"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Gender"
                    app:layout_constraintEnd_toStartOf="@id/AgeTv"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@id/materialDividerName"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerName" />

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="50pt"
                    android:layout_height="wrap_content"
                    android:text="male"
                    style="@style/userProfile_DataTV"
                    app:layout_constraintStart_toStartOf="@id/GenderTV"
                    app:layout_constraintTop_toBottomOf="@id/GenderTV" />


                <ImageButton
                    android:id="@+id/uGender"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/tv_gender"
                    app:layout_constraintEnd_toEndOf="@id/tv_gender"
                    app:layout_constraintTop_toTopOf="@+id/tv_gender" />


                <TextView
                    android:id="@+id/AgeTv"
                    style="@style/userProfile_HeadingTV"
                    android:layout_width="50pt"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Age"
                    app:layout_constraintEnd_toEndOf="@id/materialDividerName"
                    app:layout_constraintStart_toEndOf="@id/GenderTV"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerName" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="50pt"
                    android:layout_height="wrap_content"
                    style="@style/userProfile_DataTV"
                    android:text="16"
                    app:layout_constraintStart_toStartOf="@id/AgeTv"
                    app:layout_constraintTop_toBottomOf="@id/AgeTv" />


                <ImageButton
                    android:id="@+id/uAge"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/tv_age"
                    app:layout_constraintEnd_toEndOf="@id/tv_age"
                    app:layout_constraintTop_toTopOf="@+id/tv_age" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDividerAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toBottomOf="@id/tv_gender" />

                <TextView
                    android:id="@+id/PhoneNumberTV"
                    style="@style/userProfile_HeadingTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Phone Number"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerAge" />

                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/userProfile_DataTV"
                    android:text="8469156804"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/PhoneNumberTV" />

                <ImageButton
                    android:id="@+id/uPhoneNumber"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/tv_phone_number"
                    app:layout_constraintEnd_toEndOf="@id/tv_phone_number"
                    app:layout_constraintTop_toTopOf="@+id/tv_phone_number" />

                <com.google.android.material.divider.MaterialDivider
                    android:id="@+id/materialDividerPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_phone_number"
                    tools:layout_editor_absoluteY="50dp" />


                <TextView
                    android:id="@+id/StreetTV"
                    style="@style/userProfile_HeadingTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="Street Name/No"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/materialDividerPhoneNumber" />

                <TextView
                    android:id="@+id/tv_street_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/userProfile_DataTV"
                    android:text="Kosamba Road"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/StreetTV" />

                <ImageButton
                    android:id="@+id/uAddressStreet"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/tv_street_number"
                    app:layout_constraintEnd_toEndOf="@id/tv_street_number"
                    app:layout_constraintTop_toTopOf="@+id/tv_street_number" />


                <TextView
                    android:id="@+id/StateTV"
                    style="@style/userProfile_HeadingTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="State"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_city" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/userProfile_DataTV"
                    android:text="Valsad"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/StateTV" />


                <TextView
                    android:id="@+id/CityTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="City"
                    style="@style/userProfile_HeadingTV"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_street_number" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/userProfile_DataTV"
                    android:text="Gujarat"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/CityTV" />

                <ImageButton
                    android:id="@+id/uAddressCity"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/tv_city"
                    app:layout_constraintEnd_toEndOf="@id/tv_city"
                    app:layout_constraintTop_toTopOf="@+id/tv_city" />

                <ImageButton
                    android:id="@+id/uAddressState"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_right_arrow"
                    app:layout_constraintBottom_toBottomOf="@id/tv_state"
                    app:layout_constraintEnd_toEndOf="@id/tv_state"
                    app:layout_constraintTop_toTopOf="@+id/tv_state" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

