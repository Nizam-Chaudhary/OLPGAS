<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/con"
    android:layout_height="match_parent"
    android:theme="@style/NoStatusBarTheme"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".manage_room.presentation.owned_rooms.ManageFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/raw_recycler_view_rooms_list" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_room_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:transitionName="fab_transition"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/add_room" />

</androidx.constraintlayout.widget.ConstraintLayout>