<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/RoomRawBackgroundColor"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/RoomRawBackgroundColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/room_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/temp_logo"
                    android:transitionName="room_image_transition"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/EditLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardView"
                android:background="@color/RoomRawBackgroundColor"
                android:paddingHorizontal="10dp"
                android:paddingBottom="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/roomNameTV"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dateOfPost"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/editTextHintColor"
                        android:layout_marginTop="10dp"
                        android:textAlignment="viewEnd"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/roomLocationTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/roomNameTV"
                        android:inputType="textMultiLine"
                        android:textColor="@color/textColor"
                        android:textSize="15sp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/EditLayout"
                android:background="@color/backgroundColor"
                android:paddingVertical="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="Price"
                        android:textColor="@color/editTextHintColor"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/roomPrice"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv1"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="30dp"
                        android:layout_toEndOf="@id/tv1"
                        android:text="Deposit"
                        android:textColor="@color/editTextHintColor"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/roomDeposit"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv1"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@id/roomPrice"
                        android:textColor="@color/textColor"
                        android:textSize="18sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/roomContactBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="#4CAF50" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>