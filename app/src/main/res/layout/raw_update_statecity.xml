<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Spinner
        android:id="@+id/update_userProfile_spinner_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border"
        android:paddingHorizontal="10dp"
        android:paddingVertical="18dp"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_down"
        app:layout_constraintBottom_toBottomOf="@id/update_userProfile_spinner_state"
        app:layout_constraintEnd_toEndOf="@id/update_userProfile_spinner_state"
        app:layout_constraintTop_toTopOf="@id/update_userProfile_spinner_state" />

    <Spinner
        android:id="@+id/update_userProfileSpinner_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/border"
        android:paddingHorizontal="10dp"
        android:paddingVertical="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/update_userProfile_spinner_state" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_down"
        app:layout_constraintBottom_toBottomOf="@id/update_userProfileSpinner_city"
        app:layout_constraintEnd_toEndOf="@id/update_userProfileSpinner_city"
        app:layout_constraintTop_toTopOf="@id/update_userProfileSpinner_city" />


</androidx.constraintlayout.widget.ConstraintLayout>