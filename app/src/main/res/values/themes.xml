<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.OLPGB" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">#0E0E0E</item>
    </style>

    <style name="login_signIn" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="NoStatusBarTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentTransitions">true</item>

    </style>
    <style name="statusBarTheme" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">#4CAF50</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">#80CBC4</item>
        <item name="colorSecondaryVariant">#0097A7</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
    <style name="UserProfileStatusBarTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/textColor</item>
    </style>
    <style name="Theme.OLPGB" parent="Base.Theme.OLPGB" />


    <style name="chip_Style" parent="Widget.Material3.Chip.Filter">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/chip_textcolor</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <style name="detailed_room_textView" >
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>


</resources>
